rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /restaurants/{restaurantId} {
      // Allow reading of restaurant-level data if needed by the app (publicly or for users)
      allow get: if request.auth != null;

      // This block handles operations on INDIVIDUAL order documents.
      match /orders/{orderId} {
        // Allows any authenticated user (including anonymous) to create an order.
        allow create: if request.auth != null;

        // Allow user who created the order to read it.
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
        
        // Rules for the 'orderItems' sub-subcollection
        match /orderItems/{orderItemId} {
            allow read: if request.auth != null && get(/databases/$(database)/documents/restaurants/$(restaurantId)/orders/$(orderId)).data.userId == request.auth.uid;
        }
      }

      // Public read access for menus
      match /menuCategories/{menuCategoryId} {
        allow get: if true;
        match /menuItems/{menuItemId} {
            allow get: if true;
        }
      }
      
      // Public read access for tables
      match /tables/{tableId} {
          allow get: if true;
      }
    }
  }
}
